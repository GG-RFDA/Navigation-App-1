<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".CatalogActivity">
    <!-- Задаём параметры для изображения профиля -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/profile" />
    <!-- Задаём текст приветствия -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="375dp"
        android:layout_height="117dp"
        android:gravity="center"
        android:text="Добро пожаловать! Здесь вы соберете свой идеальный букет"
        android:textColor="@color/dark_gray"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.5" />
    <!-- Задаём свойства для прокрутки каталога цветов -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="375dp"
        android:layout_height="433dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.5">
        <!-- Задаём свойства для группировки элементов -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">
            <!-- Задаём свойства для изображений и текста внутри каждого блока -->
            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lavender"
                app:srcCompat="@drawable/flower" />

            <TextView
                android:id="@+id/flowerType1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="75dp"
                android:text="Розы"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lavender"
                app:srcCompat="@drawable/flower" />

            <TextView
                android:id="@+id/flowerType2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="75dp"
                android:text="Тюльпаны"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lavender"
                app:srcCompat="@drawable/flower" />

            <TextView
                android:id="@+id/flowerType3"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="90dp"
                android:text="Ромашки"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lavender"
                app:srcCompat="@drawable/flower" />

            <TextView
                android:id="@+id/flowerType4"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="90dp"
                android:text="Пионы"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lavender"
                app:srcCompat="@drawable/flower" />

            <TextView
                android:id="@+id/flowerType5"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="90dp"
                android:text="Лилии"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lavender"
                app:srcCompat="@drawable/flower" />

            <TextView
                android:id="@+id/flowerType6"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="90dp"
                android:text="Герберы"
                android:textColor="@color/dark_gray"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lavender"
                app:srcCompat="@drawable/flower" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/lavender"
                app:srcCompat="@drawable/flower" />


        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>